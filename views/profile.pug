                    .form-group
                    p Weight(kg)
                    input.form-control(type='number', name='weight', required='required')
                    .form-group
                    select.form-control(name='gender', required='required')
                        option(value='') Gender:
                        option(value='Female') Female
                        option(value='Male') Male
                    .form-group
                    p Blood type
                    input.form-control(type='text', name='bt', required='required')
                    .form-group
                    p BP level
                    select.form-control(name='BP', required='required')
                        option(value='High') high
                        option(value='Low') low
                        option(value='normal') normal
                    .form-group
                    p Deceased
                    select.form-control(name='deceased', required='required')
                        option(value='') Deceased:
                        option(value='Yes') Yes
                        option(value='No') No        
                    .form-group
                        p No. of lungs
                        input.form-control(type='number', min='1', max='2', name='nol', required='required')
                    .form-group
                        p Smoking years
                        input.form-control(type='number', name='smy', required='required')
                    .form-group
                        p History of pulminory disease
                        input.form-control(type='boolean', name='pd', required='required')
                    .form-group
                        p Pulmonary edema
                        input.form-control(type='boolean', name='edema', required='required')
                    .form-group
                        p Sepsis
                        input.form-control(type='boolean', name='sepsis', required='required')
