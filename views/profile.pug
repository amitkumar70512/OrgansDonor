include ./header
include ./headerSeller

    if !additem && !showBid && !heart && !lung 
        .row
            for item in items
                .col-md-4
                    article.items
                        
                        if item.sold
                            a( href=`/profile/showbid/${item._id}` style='font-size: 18px;')= item.name
                        else 
                            a( href=`/profile/bid/${item._id}` style='font-size: 18px;')= item.name
                        footer
                            
                            span= `${new Date(item.date).getDate()}/${new Date(item.date).getMonth()+1}/${new Date(item.date).getFullYear()}`
                            if item.sold
                                a( href=`/profile/showbid/${item._id}` style='color:green; float: right;') Sold
                            else if !item.sold && item.bidded
                                span(style='color:red;') Not sold
                            else if !item.bidded
                                span(style='color:blue;') In Queue
    else if showBid 
        .col-md-8(style='margin: auto; margin-top: 20px')
            .itemShow
                h4(style='margin-bottom: 20px')= item[0].name
                
                .info
                    div
                        p= 'Price: '
                        p= `${bid[0].price}$`
                    div
                        p= 'Bid Winner: '
                        p= user[0].fullname
                    div
                        p= 'Email address: '
                        p= user[0].email
                    div(style='border-bottom: 0px')
                        p= 'Phone number: '
                        p= user[0].phone

    else if additem == 'liver'
        .row
            .col-md-4(style='margin: auto; background-color:#f3f3f3c7; box-shadow: 0px 0px 5px 2px #30c98638; ')
                p Liver INFO
                h6(style='text-align: center; margin-top: 10px; color:#30C986; border-bottom:2px solid #30c986;' )  #{loggedInUser.fullname} 
                
                form(method='post' action='/profile/additem' enctype="multipart/form-data" style='background-color: white; padding: 10px;')
                .form-group
                p Age
                input.form-control(type='number', name='age', required='required')
                .form-group
                p Height(cm)
                input.form-control(type='number', name='height', required='required')
                .form-group
                p Weight(kg)
                input.form-control(type='number', name='weight', required='required')
                .form-group
                p Gender
                select.form-control(name='gender', required='required')
                    option(value='') Gender:
                    option(value='Female') Female
                    option(value='Male') Male
                .form-group
                p Blood type
                input.form-control(type='text', name='bt', required='required')
                .form-group
                p BP level
                select.form-control(name='BP', required='required')
                    option(value='High') high
                    option(value='Low') low
                    option(value='normal') normal
                .form-group
                p Deceased
                select.form-control(name='deceased', required='required')
                    option(value='') Deceased:
                    option(value='Yes') Yes
                    option(value='No') No
                .form-group
                select.form-control(name='Blood_sugar', required='required')
                    option(value='') Blood sugar:
                    option(value='High') high
                    option(value='Low') Low
                    option(value='normal') normal
                .form-group
                    p Hepatitis
                    input.form-control(type='boolean', name='hepatitis', required='required')
                .form-group
                    p Cancers
                    input.form-control(type='boolean', name='cancers', required='required')
                .form-group
                    p HIV
                    input.form-control(type='boolean', name='hiv', required='required')
                .form-group
                    p Creatinine
                    input.form-control(type='number', name='creatinine', required='required')
                .form-group
                    p GFRs
                    input.form-control(type='number', name='gfr', required='required')
    else if additem == 'heart'
        .row
            .col-md-4(style='margin: auto; background-color:#f3f3f3c7; box-shadow: 0px 0px 5px 2px #30c98638; ')
                p Heart INFO
                h4(style='text-align: center; margin-top: 10px; color:#30C986; border-bottom:2px solid #30c986 ' )  #{loggedInUser.fullname} 
                form(method='post' action='/profile/additem' enctype="multipart/form-data" style='background-color: white; padding: 10px;')
                    .form-group
                    p Age
                    input.form-control(type='number', name='age', required='required')
                    .form-group
                    p Height(cm)
                    input.form-control(type='number', name='height', required='required')
                    .form-group
                    p Weight(kg)
                    input.form-control(type='number', name='weight', required='required')
                    .form-group
                    select.form-control(name='gender', required='required')
                        option(value='') Gender:
                        option(value='Female') Female
                        option(value='Male') Male
                    .form-group
                    p Blood type
                    input.form-control(type='text', name='bt', required='required')
                    .form-group
                    p BP level
                    select.form-control(name='BP', required='required')
                        option(value='High') high
                        option(value='Low') low
                        option(value='normal') normal
                    .form-group
                    p Deceased
                    select.form-control(name='deceased', required='required')
                        option(value='') Deceased:
                        option(value='Yes') Yes
                        option(value='No') No

                    .form-group
                        p History of heart disease
                        input.form-control(type='boolean', name='heart_disease', required='required')
                    .form-group
                        p Obesity
                        input.form-control(type='boolean', name='obesity', required='required')
                    .form-group
                        p Diabetes
                        input.form-control(type='boolean', name='diabetes', required='required')
                    .form-group
                        p Heart abnormalities
                        input.form-control(type='boolean', name='abnormal', required='required')
                    .form-group
                        select.form-control(name='inotropes', required='required')
                        option(value='') Inotropes
                        option(value='High') positive
                        option(value='Low') negative
                        option(value='normal') na
                    .form-group
                        input.btn.btn-primary.form-control(type='submit' value='+ Add')
                    .messages
    else if additem = 'lung'
        .row
            .col-md-4(style='margin: auto; background-color:#f3f3f3c7; box-shadow: 0px 0px 5px 2px #30c98638;')
                form(method='post' action='/profile/additem' enctype="multipart/form-data" style='background-color: white; padding: 10px;')
                    p LUNG INFO
                    h3(style='text-align: center; margin-top: 10px; color:#30C986; border-bottom:2px solid #30c986; ' )  #{loggedInUser.fullname} 
