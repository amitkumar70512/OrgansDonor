    link(href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css', rel='stylesheet')
    // Core theme CSS (includes Bootstrap)
    
    script(src='https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js')
    
  // Responsive navbar
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-header
      .container.px-5
        a.navbar-brand(href='/profile')
          i.fa-solid.fa-heart-pulse
          |  OrgansDonor
        lottie-player(src='https://assets5.lottiefiles.com/packages/lf20_a1lpoeuv.json', mode='bounce', background='transparent', speed='3', style='color:white; width: 50px; height: 50px;', hover='', loop='', autoplay='')
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
.container
  .row
    .col-md-8(style='position: relative; top: 10px; margin: auto; z-index: 100;')
        form.register(action=`/adminProduct/edit/${data._id}` method='POST' name='form')
            h5(style='text-align: center; margin-top: 10px;') Update Product
            .form-group
              input(type='hidden' name='_method' value='PUT')
              input(type='hidden' name='_id' value=`${data._id}`)
            .form-group
              p Product Name
              input.form-control(type='name' name='name' value=`${data.name}`)
            .form-group
              p Product Details
              input.form-control(type='name' name='detail' value=`${data.detail}`)
            .form-group
              p Price
              input.form-control(type='number' name='price' value=`${data.price}`)
            .form-group
              input.btn.btn-primary.form-control(type='submit' value='Update')
                        