      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.ms-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link.active(aria-current='page', href='/index') Home
        li.nav-item
          a.nav-link(href='/contact') Contact us
        
        

.messages
.wrapper
  .text-center.mt-4.name Admin Login
  form.adminLogin.p-3.mt-3(method='POST', action='/admin/adminlogin')
    .form-field.d-flex.align-items-center
      span.far.fa-envelope
      input#email(type='email', name='email', placeholder='Email')
    .form-field.d-flex.align-items-center
      span.fas.fa-key
      input#pwd(type='password', name='password', placeholder='Password')
    button.btn.mt-3(type='submit') Login
  .text-center.mt-4
  .text-center.fs-6
    | Normar User ? 
    a(href='/register') Register Here


